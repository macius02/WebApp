@page
@model Projekt.CRUD.DeleteModel

<div class="banner">
    <h2 class="rounded text-center text-white p-3">Are you sure you want to delete this?</h2>
</div>
<div class="col-md-12">
    <table class="table table-striped">
        <tbody>
            <tr>
                <td style="width:300px">
                    <img src="data:image/jpg;base64,@Model.Item.ImageData" class="img-fluid banner2" alt="Item Image">
                </td>
                <td class="rounded">
                    <div class="row mb-3 banner2">
                        <div class="col-md-4">
                            <strong>Name</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Item.Name
                        </div>
                    </div>
                    <div class="row mb-3 banner2">
                        <div class="col-md-4">
                            <strong>State</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Item.State
                        </div>
                    </div>
                    <div class="row mb-3 banner2">
                        <div class="col-md-4">
                            <strong>Category</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Item.Category
                        </div>
                    </div>
                    <div class="row mb-3 banner2">
                        <div class="col-md-4">
                            <strong>Price</strong>
                        </div>
                        <div class="col-md-8">
                            @(Model.Item.Price)$
                        </div>
                    </div>
                    <div class="row mb-3 banner2">
                        <div class="col-md-4">
                            <strong>Description</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Item.Description
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="Item.Id" />
                        <input type="submit" value="Delete" class="btn btn-primary btn-sm my-2 warning" />
                        <a class="btn btn-primary btn-sm my-2 banner" asp-page="/Users/MyItems" roles="button">Go Back</a>
                    </form>

                </td>
            </tr>
        </tbody>
    </table>
</div>
