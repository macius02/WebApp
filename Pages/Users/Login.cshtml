@page
@model Projekt.Pages.Users.LoginModel
@{
}


<div class="card mx-auto banner2" style="width: 500px;">
	<div class="text-center text-white mb-5 banner">You can login</div>
	@if(Model.errorMessage.Length > 0)
	{
		<div class='alert alert-warning alert-dismissible fade show' role='alert'>
			<strong>@Model.errorMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
		</div>
	}

	
	<form method="post">
		<div class="row mb-3 text-center">
			<label class="col-sm-3 text-white form-label banner">E-mail</label>
			<div class="col-sm-6">
				<input class="form-control text-center" asp-for="Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>
		
		<div class="row mb-3 text-center">
			<label class="col-sm-3 text-white form-label banner">Password</label>
			<div class="col-sm-6">
				<input class="form-control text-center" type="password" asp-for="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
		</div>

		<div class="row mb-3">
			<div class="col d-grid">
				<button type="submit" class="btn btn-primary text-white banner" href="/">Login</button>
			</div>
			<div class="col d-grid">
				<a class="btn btn-outline-primary warning text-white" href="/" role="button">Cancel</a>
			</div>
		</div>

	</form>
</div>
